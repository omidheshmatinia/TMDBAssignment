<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/root_movieListF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView_movieDetailF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="86dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <ImageView
                    android:id="@+id/imageView_movieDetailF_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/movieDetail_header_height"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <ImageView
                    android:id="@+id/imageView_movieDetailF_poster"
                    android:layout_width="wrap_content"
                    android:layout_height="240dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView_productDetailF_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:alpha="0"
                    android:layout_gravity="center"
                    android:gravity="center|bottom"
                    android:textColor="@color/text_color_main"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/iransansfamily_eng"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="12dp"
                    app:layout_constraintTop_toBottomOf="@id/diagonalLayout_productDetailF_header"
                    tools:text="M2274"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView_productDetailF_factoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_marginRight="12dp"
                    app:layout_goneMarginTop="-10dp"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"
                    android:fontFamily="@font/iransansfamily"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_productDetailF_title"
                    tools:text="کارخانه shenzhen camera"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/textView_productDetailF_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/iransansfamily"
                    android:gravity="right"
                    android:paddingBottom="4dp"
                    android:alpha="0"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    app:layout_constraintTop_toBottomOf="@id/textView_productDetailF_factoryTitle"
                    tools:text="@string/lorem_ipsum_fa" />

            </android.support.constraint.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progressBar_movieDetailF_specification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="visible"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>